{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {

    "QuotaExceededResponse": {
      "Content": "{{ \"message\": \"Whoa! Calm down, cowboy!\", \"details\": \"Quota exceeded. Maximum allowed: {0} per {1}. Please try again in {2} second(s).\" }}",
      "ContentType": "application/json",
      "StatusCode": 429
    },

    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "GET:/v2/MintAndSendRandom",
        "Period": "10s",
        "Limit": 10
      },
      {
        "Endpoint": "GET:/v2/ProceedPaymentTransaction/*",
        "Period": "10s",
        "Limit": 100
      },
      {
        "Endpoint": "POST:/v2/ProceedPaymentTransaction/*",
        "Period": "10s",
        "Limit": 30
      },
      {
        "Endpoint": "GET:/v2/GetPaymentAddressForRandomNftSale/*",
        "Period": "10s",
        "Limit": 300
      },
      {
        "Endpoint": "GET:/v2/GetPaymentAddressForSpecificNftSale/*",
        "Period": "10s",
        "Limit": 300
      },
      {
        "Endpoint": "*",
        "Period": "10s",
        "Limit": 800
      }

    ]
  }

}
