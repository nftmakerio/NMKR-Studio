<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Policy" Class="mr-3" />Policy
            <hr />
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudContainer Style="max-height: 800px; overflow-y: scroll">
            <MudTextField Variant="Variant.Outlined" T="string"  Text="@Policy" Label="Policy" Lines="12" ReadOnly="true" />
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton DropShadow="false" Class="rounded-pill px-6 py-3" Variant="Variant.Filled" OnClick="Ok">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter]
    public string Policy { get; set; }
    private void Ok()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}
