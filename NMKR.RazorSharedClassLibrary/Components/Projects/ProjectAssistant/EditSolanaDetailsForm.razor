@using NMKR.Shared.Classes.Projects
    <MudItem xs="12">
        <MudTextField Variant="Variant.Outlined" Label="Solana Symbol" HelperText="@GlobalFunctions.CharHelper("max. 10 characters", Value?.SolanaSymbol ?? "")"
                      @bind-Value="Value.SolanaSymbol" For="@(() => Value.SolanaSymbol)" Immediate="true"/>
    </MudItem>
<MudItem xs="12">
    <MudTextField Variant="Variant.Outlined" Label="Solana Collection Family" HelperText="@GlobalFunctions.CharHelper("max. 64 characters", Value?.Solanacollectionfamily ?? "")"
                  @bind-Value="Value.Solanacollectionfamily" For="@(() => Value.Solanacollectionfamily)" Immediate="true"/>
</MudItem>
<MudItem xs="12">
    <UploadProjectImage @bind-Image="@Value.SolanaCollectionImage" DescriptionText="Preview Image of the Solana Collection" FileSize="@(new System.Drawing.Size(0, 0))" PreviewMaxWidth="300" />
</MudItem>
<MudItem xs="12">
    <MudNumericField @bind-Value="Value.SellerFeeBasisPoints" Label="Seller Fee Basis Points (in %)" Variant="Variant.Text" Min="0" Max="100" />
</MudItem>

    <MudItem xs="12" Class="mt-10">
        <SelectWallet @bind-Value="Value.SolanaWalletId" Coin="Coin.SOL" Blockchain="Blockchain.Solana" IsAdmin="@IsAdmin" CustomerId="@CustomerId"></SelectWallet>
    </MudItem>

@code {
    [Parameter]
    public int CustomerId { get; set; }
    [Parameter]
    public bool IsAdmin { get; set; }
    [Parameter]
    public CreateProjectFromTemplateClass Value { get; set; }
    [Parameter]
    public EventCallback<CreateProjectFromTemplateClass> ValueChanged { get; set; }
}
