@page "/editwhitelabelstore"
@page "/editwhitelabelstore/{WhiteLabelStoreId:int?}"
@page "/editwhitelabelstore/{WhiteLabelStoreId:int?}/{PageId:int?}"
@inject AppSettings settings

<BreadCrumb Items="_items"></BreadCrumb>

<MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
    <EditWhiteLabelStoreForm WhiteLabelStoreId="@WhiteLabelStoreId" PageId="@(PageId??1)" CustomerId="@((int)settings.UserId)"/>
</MudContainer>


@code {
    [Parameter]
    public int? WhiteLabelStoreId { get; set; } = null;
    [Parameter]
    public int? PageId { get; set; }

    private readonly List<BreadcrumbItem> _items = new()
    {
        new("Dashboard", href: "/"),
        new("Whitelabel stores", href: "/managewhitelabelstores"),
        new ("Edit store", href: "/editwhitelabelstores", disabled:true),
    };
}